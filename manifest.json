{
  "name": "+Sub",
  "version": "2.52",
  "manifest_version": 2,
  "description": "Load subtitle to a HTML5 video.",
  "author": "Stefan Breitenstein",
  "icons": {
    "16": "res/icons/plussub16.png",
    "48": "res/icons/plussub48.png",
    "128": "res/icons/plussub128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "res/icons/browseraction.png"
    },
    "default_popup": "src/chrome/popup.html"
  },
  "background": {
    "scripts": [
      "src/core/descriptor/Descriptor.js",
      "src/core/redux/extension-specific/background-bridge.js",
      "src/core/redux/extension-specific/reduxConfigForBackgroundScript.js",
      "src/core/redux/GuidService.js",
      "src/core/redux/redux.js",
      "src/core/redux/actionCreators.js",
      "src/core/background/version/ChromeVersionProvider.js",
      "src/core/background/version/VersionService.js",
      "src/core/background/parser/SrtParser.js",
      "src/core/background/parser/ParserService.js",
      "src/core/background/movie_search/MovieSearchService.js",
      "src/core/background/subtitle_download/pako/pako.js",
      "src/core/background/subtitle_download/pako/pako_deflate.js",
      "src/core/background/subtitle_download/pako/pako_inflate.js",
      "src/core/background/subtitle_download/Inflater.js",
      "src/core/background/subtitle_download/SubtitleDownloadService.js",
      "src/core/background/subtitle_search/SubtitleSearchService.js"
    ],
    "persistent": false
  },
  "options_page": "src/chrome/option.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "all_frames": false,
      "js": [
        "src/core/redux/GuidService.js",
        "src/core/descriptor/Descriptor.js",
        "src/core/redux/extension-specific/app-bridge.js",
        "src/core/redux/extension-specific/reduxConfigForUiElement.js",
        "src/core/redux/redux.js",
        "src/core/redux/actionCreators.js",

        "src/core/content-scripts/CSSInjectService.js",
        "src/core/content-scripts/VTTInjectService.js",
        "src/core/content-scripts/VideoMetaService.js",
        "src/core/content-scripts/FindVideoService.js",
        "src/core/content-scripts/InitService.js"
      ]
    }
  ],
  "minimum_chrome_version": "51",
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-inline' https://unpkg.com/vue https://www.google-analytics.com/analytics.js; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ]
}