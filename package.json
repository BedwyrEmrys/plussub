{
  "name": "plussub",
  "version": "4.0.0",
  "description": "Chrome extension which adds subtitle to html5 videos",
  "author": "Stefan Breitenstein",
  "scripts": {
    "build:app": "webpack --config src/app/webpack.config.js --display-module",
    "build:background": "webpack --config src/background/webpack.config.js --display-module",
    "build:content": "webpack --config src/content/webpack.config.js --display-module",
    "build:option": "webpack --config src/option/webpack.config.js --display-module",
    "build": "npm run build:app && npm run build:background && npm run build:content && npm run build:content",
    "zip": "rm -f ../plussub.zip && bestzip plussub.zip manifest.json src/ res/",
    "test": "jest --no-cache",
    "version": "node sync-manifest.js && git add manifest.json"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cssbeautify": "^0.3.1",
    "pako": "^1.0.6",
    "redux": "^4.0.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuetify": "^1.1.12"
  },
  "engine": "node >= 0.10",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "bestzip": "^2.1.5",
    "css-loader": "^1.0.0",
    "jest": "^23.5.0",
    "prettier": "^2.0.5",
    "style-loader": "^0.22.1",
    "vue-loader": "^15.4.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 200,
    "singleQuote": true
  }
}
