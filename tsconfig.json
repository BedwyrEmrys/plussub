{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/popup/*"],
      "#/*": ["src/background/*"]
    },
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": ["vue-shims.d.ts"],
}
